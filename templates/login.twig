{% extends "page.twig" %}
{% block content %}
<section class="login-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-12">
                <div class="login-wrapper bg-white shadow rounded p-5">
                    <div class="text-center mb-4">
                        <h2 class="crimson-semibold font-40 text-dark mb-2">{%trans%}Welcome Back{%endtrans%}</h2>
                        <p class="hind-regular font-16 text-muted">{%trans%}Sign in to your account{%endtrans%}</p>
                    </div>

                    {% if error==1 %}
                    <div class="alert alert-danger border-0 mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {%trans%}Username and password does not match{%endtrans%}.
                    </div>
                    {% endif %}

                    <form method="POST" action="login" class="login-form">
                        <div class="form-group mb-4">
                            <label class="form-label hind-medium font-14 text-dark mb-2">{%trans%}Email Address{%endtrans%}</label>
                            <input type="text" 
                                   class="form-control form-control-lg border-2 rounded-3 py-3 px-4" 
                                   name="username" 
                                   placeholder="{%trans%}Enter your email{%endtrans%}"
                                   required>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label class="form-label hind-medium font-14 text-dark mb-2">{%trans%}Password{%endtrans%}</label>
                            <input type="password" 
                                   class="form-control form-control-lg border-2 rounded-3 py-3 px-4" 
                                   name="password" 
                                   placeholder="{%trans%}Enter your password{%endtrans%}"
                                   required>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="rememberMe">
                                <label class="form-check-label hind-regular font-14 text-muted" for="rememberMe">
                                    {%trans%}Remember me{%endtrans%}
                                </label>
                            </div>
                            <a href="#" class="text-decoration-none hind-medium font-14">{%trans%}Forgot Password?{%endtrans%}</a>
                        </div>

                        <div class="form-group mb-4">
                            <input type="hidden" name="profile" value="{{profile}}">
                            <button type="submit" class="btn btn-dark btn-lg w-100 py-3 hind-bold font-16 text-uppercase">
                                {%trans%}Sign In{%endtrans%}
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="hind-regular font-14 text-muted mb-0">
                                {%trans%}Don't have an account?{%endtrans%} 
                                <a href="/register" class="text-dark text-decoration-none hind-medium">{%trans%}Sign Up{%endtrans%}</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.login-section {
    min-height: 70vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.login-wrapper {
    border: none;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
}

.form-control:focus {
    border-color: #212529;
    box-shadow: 0 0 0 0.2rem rgba(33, 37, 41, 0.25);
}

.btn-dark:hover {
    background-color: #000;
    transform: translateY(-2px);
    transition: all 0.3s ease;
}
</style>
{% endblock %}
