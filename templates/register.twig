{% extends "page.twig" %}
{% block content %}
<section class="register-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-12">
                <div class="register-wrapper bg-white shadow rounded p-5">
                    <div class="text-center mb-4">
                        <h2 class="crimson-semibold font-40 text-dark mb-2">{% trans %}Join Helena{% endtrans %}</h2>
                        <p class="hind-regular font-16 text-muted">{% trans %}Create your account to get started{% endtrans %}</p>
                    </div>

                    {% if error==1 %}
                    <div class="alert alert-danger border-0 mb-4" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        {% trans %}The following error occurred{% endtrans %}: {{ error_msg }}
                    </div>
                    {% endif %}

                    <form method="POST" action="register" class="register-form">
                        <div class="form-group mb-4">
                            <label class="form-label hind-medium font-14 text-dark mb-2">{% trans %}Email Address{% endtrans %}</label>
                            <input type="email" 
                                   class="form-control form-control-lg border-2 rounded-3 py-3 px-4" 
                                   name="email" 
                                   value="{{ email }}"
                                   placeholder="{% trans %}Enter your email address{% endtrans %}"
                                   required>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label class="form-label hind-medium font-14 text-dark mb-2">{% trans %}Password{% endtrans %}</label>
                            <input type="password" 
                                   class="form-control form-control-lg border-2 rounded-3 py-3 px-4" 
                                   name="password" 
                                   placeholder="{% trans %}Create a strong password{% endtrans %}"
                                   required>
                            <small class="form-text text-muted hind-regular font-12 mt-1">
                                {% trans %}Password must be at least 8 characters long{% endtrans %}
                            </small>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label hind-medium font-14 text-dark mb-2">{% trans %}Confirm Password{% endtrans %}</label>
                            <input type="password" 
                                   class="form-control form-control-lg border-2 rounded-3 py-3 px-4" 
                                   name="password2" 
                                   placeholder="{% trans %}Confirm your password{% endtrans %}"
                                   required>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                            <label class="form-check-label hind-regular font-14 text-muted" for="agreeTerms">
                                {% trans %}I agree to the{% endtrans %} 
                                <a href="#" class="text-dark text-decoration-none hind-medium">{% trans %}Terms & Conditions{% endtrans %}</a> 
                                {% trans %}and{% endtrans %} 
                                <a href="#" class="text-dark text-decoration-none hind-medium">{% trans %}Privacy Policy{% endtrans %}</a>
                            </label>
                        </div>

                        <div class="form-group mb-4">
                            <input type="hidden" name="already_sent" value="1">
                            <button type="submit" class="btn btn-dark btn-lg w-100 py-3 hind-bold font-16 text-uppercase">
                                {% trans %}Create Account{% endtrans %}
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="hind-regular font-14 text-muted mb-0">
                                {% trans %}Already have an account?{% endtrans %} 
                                <a href="/login" class="text-dark text-decoration-none hind-medium">{% trans %}Sign In{% endtrans %}</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.register-section {
    min-height: 80vh;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.register-wrapper {
    border: none;
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
}

.form-control:focus {
    border-color: #212529;
    box-shadow: 0 0 0 0.2rem rgba(33, 37, 41, 0.25);
}

.btn-dark:hover {
    background-color: #000;
    transform: translateY(-2px);
    transition: all 0.3s ease;
}

.form-check-input:checked {
    background-color: #212529;
    border-color: #212529;
}

.form-check-input:focus {
    box-shadow: 0 0 0 0.2rem rgba(33, 37, 41, 0.25);
}
</style>
{% endblock %}
